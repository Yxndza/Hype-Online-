@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Payment Successful";
}

<h2 class="title text-center">@ViewBag.Title</h2>

<h3>Order Details</h3>

<div class="row">
    <div class="col-md-4">
        <b>Account Details</b>
        @{ HypestoreFinal.Models.ApplicationDbContext db = new HypestoreFinal.Models.ApplicationDbContext(); }

        <table class="table">
            <tr>
                <td>Name</td>
                <td>@db.Customers.ToList().FirstOrDefault(x => x.Email == @User.Identity.GetUserName()).FirstName  </td>
            </tr>
            <tr>
                <td>Cell Number</td>
                <td>@db.Customers.ToList().FirstOrDefault(x => x.Email == @User.Identity.GetUserName()).phone</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@db.Customers.ToList().FirstOrDefault(x => x.Email == @User.Identity.GetUserName()).Email</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">

        <b>Order Details</b>
        @{ HypestoreFinal.Models.Order order = (HypestoreFinal.Models.Order)ViewBag.Order; }

        <table class="table">
            <tr>
                <td>Order No.</td>
                <td>@order.OrderID</td>
            </tr>
            <tr>
                <td>Status</td>
                <td>@order.status</td>
            </tr>

        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-4">

        <b>Shipping Details</b>
        @{ HypestoreFinal.Models.OrderAddress address = (HypestoreFinal.Models.OrderAddress)ViewBag.Address; }
        @if (address != null)
        {
            <table class="table">
                <tr>
                    <td>Street</td>
                    <td>@address.street</td>
                </tr>
                <tr>
                    <td>City/Town</td>
                    <td>@address.city</td>
                </tr>
                <tr>
                    <td>Zipcode</td>
                    <td>@address.zipcode</td>
                </tr>
            </table>
        }
        else
        {
            <hr />
            <p>
                Collect your order at our warehouse.
                <br />
                <i class="fa fa-map-marker"></i>  99 Samora Machel St, Durban, 4001
                <br />
                <i class="fa fa-clock-o"></i>  8:30 am - 17:00 working hours
                <br />
            </p>
        }

    </div>
    <div class="col-md-6">

        <b>Items in this Order</b>
        <table class="table">
            <tr>
                <th>
                    Picture
                </th>
                <th>
                    Item
                </th>
                <th>
                    Qty
                </th>
                <th>
                    Price
                </th>
            </tr>

            @foreach (var item in (List<HypestoreFinal.Models.OrderItem>)ViewBag.Items)
            {
                <tr>
                    <td>
                        @if (item.Item.Image != null)
                        {
                            var base64 = Convert.ToBase64String(item.Item.Image);
                            var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
                            <img src="@imgSrc" width="60" height="70" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        R @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }

            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    R @ViewBag.Total
                </td>
            </tr>
        </table>

    </div>
</div>
