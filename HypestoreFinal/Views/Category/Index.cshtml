@using HypestoreFinal.Helpers
@model IEnumerable<HypestoreFinal.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<br />
<br />

<a class="btn btn-default" href="@Url.Action("Create","Category")">
    <i class="fa fa-plus"></i>
    Create New
</a>
<br />
<br />
@using (Html.BeginForm())
{
    <p>
        Select Department: @Html.DropDownList("SelectedDepartment", "All")
        <input type="submit" value="Filter" />
    </p>
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Categories</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Departments.Department_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Safety_Stock_level)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add New Category", "Create", "CategoryEntities", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departments.Department_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Safety_Stock_level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <div class="pull-right">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "CategoryEntities", routeValues: new { id = item.Category_ID }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-folder-open'></span>", "Details", "Details", "CategoryEntities", routeValues: new { id = item.Category_ID }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "CategoryEntities", routeValues: new { id = item.Category_ID }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                        </div>


                    </td>
                </tr>
            }

        </table>
    </div>
</div>